<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_dialogue"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.rjtest.returngaddi.DialogueActivity"
    android:orientation="vertical"
    android:padding="5dp">



    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Enter Register Email"
        android:gravity="center"
        android:textSize="25dp"
        android:textStyle="bold"
        android:id="@+id/dialog_text"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/forgot_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/dialogue_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:hint="Email-Id"
            android:layout_below="@+id/Last"
           />

    </android.support.design.widget.TextInputLayout>

        <Button
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/show_button"
            android:layout_below="@id/dialogue_email"
            android:background="@color/colorGreen"
            android:text="SEND"
            android:textColor="@android:color/white"/>



</LinearLayout>
